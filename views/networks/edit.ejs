<%- include('../partials/header') %>

<div class="container">
    <div class="row">
    <div class="offset-md-3 col-md-6 ps-0 pe-0">

    <h2>EDIT CONTACT</h2>

    <% if (errorMessage) { %>
        <p style="color: #FF1744;"><%= errorMessage %></p>
    <% } %>

<form id="new-network" action="/networks/<%= network._id %>?_method=PUT" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="<%= network.name %>">
    <label>Email</label>
    <input type="text" name="email" value="<%= network.email %>">
    <label>Phone</label>
    <input type="text" name="phone" value="<%= network.phone %>">
    <a href="/networks" class="button">Cancel</a>
    <input type="submit" value="Update network">
</form>

    </div>
    </div>
</div>

<%- include('../partials/footer') %>
